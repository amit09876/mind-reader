<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find the corresponding alphabet from the resultant number you got. Now with that alphabet think about a country name. Now from the country name spelling, select the 2nd letter. Now think about an animal from that letter"
        android:textSize="18dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:text="1"
                android:textSize="22dp" />

            <TextView
                android:text="A"
                android:textSize="22dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:text="2"
                android:textSize="22dp" />

            <TextView
                android:text="B"
                android:textSize="22dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:text="3"
                android:textSize="22dp" />

            <TextView
                android:text="C"
                android:textSize="22dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:text="4"
                android:textSize="22dp" />

            <TextView
                android:text="D"
                android:textSize="22dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:text="5"
                android:textSize="22dp" />

            <TextView
                android:text="E"
                android:textSize="22dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:text="6"
                android:textSize="22dp" />

            <TextView
                android:text="F"
                android:textSize="22dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:text="7"
                android:textSize="22dp" />

            <TextView
                android:text="G"
                android:textSize="22dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:text="8"
                android:textSize="22dp" />

            <TextView
                android:text="H"
                android:textSize="22dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:text="9"
                android:textSize="22dp" />

            <TextView
                android:text="I"
                android:textSize="22dp" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/buttonSee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="See What you are thinking?" />
</RelativeLayout>